<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectDiseaseDetails">
    <TextView
        android:id="@+id/apptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bblue"
        android:fontFamily="@font/amiko_semibold"
        android:padding="10dp"
        android:text="Paddy Disease Tracker"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_subdivision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/brightBlue"
        android:fontFamily="@font/amiko_semibold"
        android:padding="10dp"
        android:text="@string/diseasetype"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/apptitle" />
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diseases"
        android:fontFamily="@font/abril_fatface"
        android:textSize="44dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/select_subdivision"/>
    <RelativeLayout
        android:id="@+id/Brownspotface"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bs"
        app:layout_constraintTop_toBottomOf="@+id/subtitle">

        <TextView
            android:id="@+id/brownspotface_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:padding="25dp"
            android:text="Brownspot"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="30sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Hispaface"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/hi"
        app:layout_constraintTop_toBottomOf="@+id/Brownspotface">

        <TextView
            android:id="@+id/hispaface_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:padding="25dp"
            android:text="Hispa"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="30sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Leafblastface"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/lb"
        app:layout_constraintTop_toBottomOf="@+id/Hispaface">

        <TextView
            android:id="@+id/Leafblastface_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:padding="25dp"
            android:text="LeafBlast"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="30sp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>