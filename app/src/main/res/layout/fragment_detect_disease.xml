<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetectDiseaseFragment">

    <TextView
        android:id="@+id/detect_disease_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Disease Detector"
        android:textSize="30dp" />


    <ImageView
        android:id="@+id/imageCaptured"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/detect_disease_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:src="@drawable/leaf" />

    <Button
        android:id="@+id/upload_img_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/light_green"
        android:text="Upload From Gallery" />

    <Button
        android:id="@+id/detect_disease_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:backgroundTint="@color/light_green"
        android:text="Detect Disease" />

    <Button
        android:id="@+id/report_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="600dp"
        android:text="Report"
        android:backgroundTint="@color/dirty_green"
        android:visibility="invisible" />

    <Button
        android:id="@+id/detail_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="600dp"
        android:layout_marginRight="40dp"
        android:text="Details"
        android:backgroundTint="@color/dirty_green"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/probabilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detect_disease_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="" />


</RelativeLayout>